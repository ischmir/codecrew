{{> nav}}

<main class="dashboard_main">
    {{> header}}

    <form action="/templateCreation" method="post" class="templateCreationForm">
        <fieldset>
            <label for="title">Title</label>
            <br>
            <input type="text" name="title" placeholder="Title of the new template">
        </fieldset>
        <fieldset>
            <label for="content">Content of the new template</label>
            <textarea name="content" id=""></textarea>
        </fieldset>
        <fieldset>
            <label for="">Upload a file instead</label>
            <br>
            <input type="file" accept=".yml, .yaml, .txt" name="content" placeholder="Content of the new template">
        </fieldset>
        <button type="submit" class="button">Create template</button>
    </form>
</main>