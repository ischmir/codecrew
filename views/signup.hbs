

<div class="signup_container">
    <div class="signup_container2">
        <img class="logo_login" src="img/logo_1.png">
        <h2 class="h2_signup">Sign up</h2>
        <form action="" class="login_form" method="post">
            <input type="text" class="input_signup" placeholder="First Name" name="firstname" required>
            <input type="text" class="input_signup" placeholder="Last Name" name="lastname" required>
            <input type="text" class="input_signup" placeholder="Email" name="email" required>
            <input type="password" class="input_signup" id="input_password" placeholder="Password" name="password" required>
            <div id="message">
                <h5 class="password_contains">Password must contain the following:</h5>
                <p id="letter" class="invalid">A <b>lowercase</b> letter</p>
                <p id="capital" class="invalid">A <b>capital (uppercase)</b> letter</p>
                <p id="number" class="invalid">A <b>number</b></p>
                <p id="length" class="invalid">Minimum <b>8 characters</b></p>
                <p id="speciel" class="invalid">Minimum <b>1 special character</b></p>
            </div>
            <input type="password" class="input_signup" id="confirm_password" placeholder="Repeat Password" name="repeatpassword" required>
            <button type="submit" class="login_button">Sign up</button>
            <span class="already_have_a_login">Already have an account? <a href="login">Login</a></span>
        </form>
    </div>
</div>

<script type="text/javascript" src="/script/script_signup.js"></script>