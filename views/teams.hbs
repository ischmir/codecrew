{{> nav}}
<main class="main_settings">
	{{> header}}

  <h1>Teams</h1>
  
  <div class="team-container">
    <!-- Venstre Sektion -->
    <div class="team-setup">
      <h2>Create Team or Edit existing Team</h2>

      <!-- Tabs til Create og Edit -->
      <div class="tabs">
        <button class="tab active">Create Team</button>
        <button class="tab">Edit Existing Team</button>
      </div>

      <form action="/createTeam" method="post">
        <label for="team-name">Team Name</label>
        <input type="text"  id="team-name" placeholder="Team Name" />

        <label for="add-members">Add Team Members</label>
        <select id="add-members">
          <option value="0">Choose a member</option>
          <option value="1">Mai</option>
          <option value="2">Michael</option>
          <option value="3">Bob</option>
        </select>

        <div class="or-section">
          <span>Or</span>
          <div id="csv-dropzone" class="button">Upload CSV File</div>
          <input type="file" id="csv-file-input" accept=".csv" hidden />
        </div>

        <textarea id="csv-textbox" rows="5" placeholder="Indsæt eller upload CSV-indhold her..."></textarea>

        <label for="description">Description</label>
        <textarea id="description" rows="3" placeholder="Enter team description"></textarea>

        <label for="expiration">Expiration Date</label>
        <input type="date" id="expiration" />

        <button type="submit" class="create-button">Create Team</button>
      </form>
    </div>

    <!-- Højre Sektion -->
    <div class="team-members">
      <h2>Added Team Members</h2>
      <ul id="added-members-list">
        <li>Markus</li>
        <li>Markus</li>
        <li>Markus</li>
      </ul>
    </div>
  </div>


