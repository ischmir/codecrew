						<div class="labelline">Team name</div>
					</div>
				</div>

<div class="teamContainer">   
  <label for="description">Description</label>
        <textarea id="description" rows="3" placeholder="Enter team description" name="description" class=""></textarea>
</div>
     
<div class="teamContainer">
   <label for="expiration" >Expiration date</label>
        <input type="date" name="expire" class="input_group date" id="expiration" />
</div>
       

