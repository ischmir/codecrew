	{{> header}}
  
  <div class="team-container container">
    <!-- Venstre Sektion -->
    <div class="team-setup">
      <h2>Create team</h2>

      <!-- Tabs til Create og Edit -->
      <div class="tabs">
        <a class="tab active">Create team</a>
           <a href="/teams-edit" class="tab"> Edit existing team</a>
      </div>
      
	  </div>


    <div class="teamContainer">
      <form action="/createTeam" class="" method="post"> 
		 <!-- Team name imput-->

				<div class="input_container">
